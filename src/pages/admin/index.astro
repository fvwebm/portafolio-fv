---
import Layout from '../../layouts/Layout.astro';
---
<Layout title="Panel de Administración">
  <div id="loading-screen" class="flex justify-center items-center h-64 text-white">
    <p class="text-xl italic animate-pulse">Verificando credenciales...</p>
  </div>

  <div id="admin-content" class="hidden container mx-auto mt-10 px-4 text-white">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-4xl font-bold">Panel de Administración</h1>
      <button id="logout-button" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Cerrar Sesión</button>
    </div>
    
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-blue-400">Mis Proyectos</h2>
      <a href="/admin/new-project" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">+ Nuevo Proyecto</a>
    </div>
    <div class="bg-gray-800 rounded-lg shadow-lg overflow-x-auto mb-12 border border-gray-700">
      <table class="min-w-full text-left">
        <thead class="bg-gray-700">
          <tr><th class="p-4 text-white">Título</th><th class="p-4 text-white">Categoría</th><th class="p-4 text-white">Acciones</th></tr>
        </thead>
        <tbody id="projects-list"></tbody>
      </table>
    </div>

    <h2 class="text-2xl font-bold mb-4 text-blue-400">Mis Categorías</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-20">
      <div class="bg-gray-800 rounded-lg shadow-lg p-4 border border-gray-700">
        <table class="min-w-full text-left">
          <thead class="bg-gray-700">
            <tr><th class="p-4 text-white">Nombre</th><th class="p-4 text-white">Acciones</th></tr>
          </thead>
          <tbody id="categories-list"></tbody>
        </table>
      </div>
      <div class="bg-gray-800 rounded-lg shadow-lg p-6 border border-gray-700">
        <h3 class="text-xl font-bold mb-4">Nueva Categoría</h3>
        <form id="new-category-form">
          <input type="text" id="category-name" class="w-full p-2 rounded bg-gray-700 border border-gray-600 mb-4 text-white outline-none focus:border-blue-500" placeholder="Nombre de categoría" required />
          <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Guardar Categoría</button>
        </form>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { auth, db } from '../../lib/firebase';
  import { onAuthStateChanged, signOut } from 'firebase/auth';
  import { collection, getDocs, doc, deleteDoc, addDoc } from 'firebase/firestore';

  const adminContent = document.getElementById('admin-content');
  const loadingScreen = document.getElementById('loading-screen');

  onAuthStateChanged(auth, (user) => {
    if (user) {
      adminContent.classList.remove('hidden');
      loadingScreen.classList.add('hidden');
      loadData();
    } else {
      window.location.href = '/admin/login';
    }
  });

  async function loadData() {
    const pSnap = await getDocs(collection(db, 'projects'));
    const pList = document.getElementById('projects-list');
    if (pList) {
      pList.innerHTML = '';
      pSnap.forEach(d => {
        const p = d.data();
        const row = document.createElement('tr');
        row.className = "border-t border-gray-700";
        row.innerHTML = `<td class="p-4 font-bold text-white">${p.title}</td><td class="p-4 text-blue-300">${p.category_name}</td><td class="p-4"><a href="/admin/edit/${d.id}" class="text-yellow-500 mr-4">Editar</a><button class="text-red-500 del-p" data-id="${d.id}">Eliminar</button></td>`;
        pList.appendChild(row);
      });
    }

    const cSnap = await getDocs(collection(db, 'categories'));
    const cList = document.getElementById('categories-list');
    if (cList) {
      cList.innerHTML = '';
      cSnap.forEach(d => {
        const c = d.data();
        const row = document.createElement('tr');
        row.className = "border-t border-gray-700";
        row.innerHTML = `<td class="p-4 text-white">${c.name}</td><td class="p-4"><button class="text-red-500 del-c" data-id="${d.id}">Eliminar</button></td>`;
        cList.appendChild(row);
      });
    }

    document.querySelectorAll('.del-p').forEach(b => b.addEventListener('click', async (e) => {
      const id = e.target.dataset.id;
      if (confirm('¿Eliminar?') && id) { await deleteDoc(doc(db, 'projects', id)); location.reload(); }
    }));

    document.querySelectorAll('.del-c').forEach(b => b.addEventListener('click', async (e) => {
      const id = e.target.dataset.id;
      if (confirm('¿Eliminar?') && id) { await deleteDoc(doc(db, 'categories', id)); location.reload(); }
    }));
  }

  document.getElementById('new-category-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const name = document.getElementById('category-name').value;
    await addDoc(collection(db, 'categories'), { name, slug: name.toLowerCase().replace(/\s+/g, '-') });
    location.reload();
  });

  document.getElementById('logout-button')?.addEventListener('click', () => signOut(auth));
</script>