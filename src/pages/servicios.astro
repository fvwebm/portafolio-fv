---
import Layout from '../layouts/Layout.astro';
import { db } from '../lib/firebase';
import { collection, getDocs } from 'firebase/firestore';

// Obtenemos los servicios
type Service = {
  id: string;
  title: string;
  short_description: string;
}

const servicesCol = collection(db, 'services');
const servicesSnapshot = await getDocs(servicesCol);

const services: Service[] = servicesSnapshot.docs.map(doc => ({
  id: doc.id,
  ...doc.data()
} as Service));
---

<Layout title="Mis Servicios">
  <div class="container mx-auto mt-10 px-4">
    <h1 class="text-4xl font-bold mb-8 text-center">Cat√°logo de Servicios</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(service => (
        <div class="bg-gray-800 rounded-lg shadow-lg p-8 text-center">
          <h2 class="text-2xl font-bold mb-4">{service.title}</h2>
          <p class="text-gray-400">{service.short_description}</p>
        </div>
      ))}
    </div>
  </div>
</Layout>